/// Node position info
class NodeData {
	new (atLine, atColumn, atFile) {
		line = atLine
		column = atColumn
		fileName = atFile
	}
	var line: Int
	var column: Int
	var fileName: String
}

enum ClassKind : Int {
	Class
	Interface
}

enum ImportNode {
	Lower(name: String)
	Upper(name: String)
	AllTheThings
	As(left: ImportNode, right: ImportNode)
}
