{
	"name": "The Hexa Compiler",
	"version": "0.0.5",
	"entry": "cli",
	"roots": ["source"],
	"global": [
		"compiler/normalizer",
		"compiler/typer",
		"compiler/lexer",
		"compiler/parser",
		"tests/testLexer",
		"tests/testParser",
		"tests/testTyper",
		"targets/genJs",
		"targets/genCxx",
		"data/token",
		"data/nice",
		"data/nodes",
		"data/data",
		"data/types",
		"data/project",
		"data/compilerError",
		"data/hints",
		"targets",
		"help",
		"repl",
		"main",
		"cli/symlink",
		"server"
	],
	"define":
	{
		"times": false,
		"debug": false
	},
	"output": "hexa-node.js",
	"license": "LGPL-3.0-only",
	"author": "Oleg (PeyTy)",
	"addLicenseNoticeToOutput": true,
	"randomSeed": 1,
	"targets": [
		{
			"name": "default",
			"generator": "js",
			"options": ["nodejs"],
			"output": "hexa-node.js"
		}
	]
}
